{
    "version": "{{integreatly_version}}",
    "components":[
        {% for c in component_manifests %}
            {
                "name": "{{c.name}}",
                "version": "{{c.version}}",
                "host": "{{c.host}}"
                {% if c.type %}
                , "type": "{{c.type}}"
                {% endif %}
                {% if c.mobile %}
                , "mobile": "{{c.mobile | bool | to_json}}"
                {% endif %}
            }
            {% if not loop.last %}
            ,
            {% endif %}
        {% endfor %}
    ]
}
